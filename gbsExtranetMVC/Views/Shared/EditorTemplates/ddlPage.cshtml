@(Html.Kendo().DropDownList()
                    .Name("PageID")
            .OptionLabel("-- Select --")
            .HtmlAttributes(new { style = "width:100%" })
                        .DataTextField("Page")
                        .DataValueField("PageID")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetPages", "DropDownLists");
        });
    })
)
