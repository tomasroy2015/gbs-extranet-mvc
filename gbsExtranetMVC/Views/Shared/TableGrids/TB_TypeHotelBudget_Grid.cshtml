@using Resources
@using MessageColumnCaptions

<h1 style="color: black; text-align:center">@MessageColumnCaptions.DynamicPageName("TB_TypeHotelBudget")</h1>
<script>
    function RefreshGrid(e) {
        this.read();
    }
</script>

@(Html.Kendo().Grid<gbsExtranetMVC.Models.Repositories.TB_TypeHotelBudgetExt>()
                        .Name("TB_TypeHotelBudget_Grid")
        //.Events(events => events.Edit("onChange"))
        .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(25)
            .Events(events => events.Error("onError").Sync("RefreshGrid"))
        .ServerOperation(true)
        .Model(model =>
        {
            model.Id(p => p.ID);
             model.Field(p => p.ID).Editable(false);
        })
                                    .Create(update => update.Action("_Create", "TB_TypeHotelBudget"))
                                    .Read(read => read.Action("_Read", "TB_TypeHotelBudget", new { TableID = (int)ViewBag.TableID }))
                                    .Destroy(destroy => destroy.Action("_Destroy", "TB_TypeHotelBudget"))
                                    .Update(update => update.Action("_Update", "TB_TypeHotelBudget"))
        //.Destroy(destroy => destroy.Action("_Destroy", "TB_TypeFirmRequestStatus"))

        )


            .Columns(columns =>
            {
                columns.Command(
                 command =>
                 {
                     command.Edit().UpdateText(Resources.Update).CancelText(Resources.Cancel).Text(Resources.Edit);
                     command.Destroy().Text(Resources.Delete);
                 }).Locked(true).Width(180);

                columns.Bound(p => p.ID).Title("ID").Width(100).Locked(true);
                columns.Bound(p => p.Currency).EditorTemplateName("ddlCurrenciesForValidation").Title(MessageColumnCaptions.TB_TypeHotelBudgetCaption("CurrencyID")).Width(340);
                columns.Bound(p => p.Margin).Title(MessageColumnCaptions.TB_TypeHotelBudgetCaption("Margin")).Width(340);
                columns.Bound(p => p.EndValue).Title(MessageColumnCaptions.TB_TypeHotelBudgetCaption("EndValue")).Width(330);
               
       
            })
                .ToolBar(tool =>
                {
                    tool.Custom().Name("cmdAddNewRecord")
                   .Text(Resources.NewRecord)
                   .HtmlAttributes(new { @id = "cmdAddNewRecord" });
                    tool.Excel().Text(Resources.ExporttoExcel);
                })
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                    .Scrollable(scrollable => scrollable.Height(430))
        //.Scrollable().HtmlAttributes(new { @style = "width:1200px;" })

                .Pageable(p => p.Refresh(true))
                .Sortable()
                .Navigatable()
                .Groupable()
                .Scrollable(scr => scr.Height(370))
                .Filterable()
                .Excel(excel => excel
                                    .FileName("TB_TypeHotelBudget.xlsx")
                .Filterable(true))

)


<script id="AddNewRecord">



    $("#cmdAddNewRecord").click(function (e) {

        var table = $("#TB_TypeHotelBudget_Grid").data("kendoGrid");
        var sorting = table.dataSource.sort();

        if (sorting) {
            table.dataSource.sort(null);
        }
        table.addRow();
        e.preventDefault();
        //put custom logic here
    });
</script>
