@using Resources
@using MessageColumnCaptions


<h1 style="color: black; text-align:center">@MessageColumnCaptions.DynamicPageName("TB_HotelAttribute")</h1>

<div class="jumbotron" style="text-align: left; margin-bottom: 50px;border-radius:8px;padding: 10px;font-size: 15px;font-weight: 100;line-height: 1.142857;">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4 col-sm-4">
                <div class="col-md-4 col-sm-4 " style="padding: 8px;">
                    <label>@MessageColumnCaptions.TB_HotelAttributeCaption("HotelID")</label>
                </div>
                <div class="col-md-7 col-sm-7">
                    <input id="Hotel" style="width:100%" />
                </div>
            </div>
            <div class="col-md-4 col-sm-4">
                <div class="col-md-4 col-sm-4 " style="padding: 8px;">
                    <label>@MessageColumnCaptions.TB_HotelAttributeCaption("AttributeID")</label>
                </div>
                <div class="col-md-7 col-sm-7">
                    <input id="Attribute" style="width:100%" />
                </div>
            </div>
            <div class="col-md-4  col-sm-4" style="padding: 10px;">
                <button id="btnfilter" class="btn btn-info" onclick="Filter()">@Resources.Filter</button>
                <button class="btn btn-info" id="btnClearFilter" onclick="clearFiter()">@Resources.RemoveFilter</button>
            </div>
        </div>
    </div>
</div>

<script>
    function OnEdit(e) {
        if (e.model.isNew() == false) {
            $('input[name=ID]').parent().html(e.model.ID);
        }
    }

    function RefreshGrid(e) {
        this.read();
    }
</script>

@(Html.Kendo().Grid<gbsExtranetMVC.Models.Repositories.TB_HotelAttributeExt>()
                                        .Name("TB_HotelAttribute_Grid")

        .Events(events => events.Edit("OnEdit"))
        .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Events(events => events.Error("onError").Sync("RefreshGrid"))
        .ServerOperation(true)        
        .Model(model =>
        {
            model.Id(p => p.ID);
            model.Field(p => p.ID).Editable(true);
        })
                                    .Create(update => update.Action("_Create", "TB_HotelAttribute"))
                                    .Read(read => read.Action("_Read", "TB_HotelAttribute", new { TableID = (int)ViewBag.TableID }))
                                    .Update(update => update.Action("_Update", "TB_HotelAttribute"))
                                    .Destroy(destroy => destroy.Action("_Destroy", "TB_HotelAttribute"))
        )

        .Columns(columns =>
        {
            columns.Command(
             command =>
             {
                 command.Edit().UpdateText(Resources.Update).CancelText(Resources.Cancel).Text(Resources.Edit);
                 command.Destroy().Text(Resources.Delete);
             }).Locked(true).Width(180).Title("Operation");

            columns.Bound(p => p.ID).Width(100).Title(MessageColumnCaptions.TB_HotelAttributeCaption("ID"));
            columns.Bound(p => p.Hotel).Title(MessageColumnCaptions.TB_HotelAttributeCaption("HotelID")).EditorTemplateName("ddlHotels").Width(200);
            columns.Bound(p => p.Attribute).Title(MessageColumnCaptions.TB_HotelAttributeCaption("AttributeID")).EditorTemplateName("ddlHotelAttribute").Width(200);
            columns.Bound(p => p.Charged).Title(MessageColumnCaptions.TB_HotelAttributeCaption("Charged"))
                .ClientTemplate("<div style='text-align:center;'> #if(Charged){# <img src='/Images/checked.gif' alt='checked'> #} else {# <img src='/Images/red_cross.png' alt='redCross'> #}# </div>")
                .Width(100);
            columns.Bound(p => p.Unit).Title(MessageColumnCaptions.TB_HotelAttributeCaption("UnitID")).EditorTemplateName("ddlUnit").Width(200);
            columns.Bound(p => p.UnitValue).Title(MessageColumnCaptions.TB_HotelAttributeCaption("UnitValue")).Width(200);
            columns.Bound(p => p.Charge).Title(MessageColumnCaptions.TB_HotelAttributeCaption("Charge")).Width(200);
            columns.Bound(p => p.Currency).Title(MessageColumnCaptions.TB_HotelAttributeCaption("CurrencyID")).EditorTemplateName("ddlCurrencies").Width(200);
            columns.Bound(p => p.StartDate).Title(MessageColumnCaptions.TB_HotelAttributeCaption("StartDate")).ClientTemplate("#= kendo.toString(StartDate,'dd.MM.yyyy') #").Width(200);
            columns.Bound(p => p.EndDate).Title(MessageColumnCaptions.TB_HotelAttributeCaption("EndDate")).ClientTemplate("#= kendo.toString(EndDate,'dd.MM.yyyy') #").Width(200);            
            columns.Bound(p => p.Active).Title(MessageColumnCaptions.TB_HotelAttributeCaption("Active"))
                .ClientTemplate("<div style='text-align:center;'> #if(Active){# <img src='/Images/checked.gif' alt='checked'> #} else {# <img src='/Images/red_cross.png' alt='redCross'> #}# </div>")
                .Width(100);
        })
        .ToolBar(tool =>
        {
            tool.Custom().Name("cmdAddNewRecord")
                   .Text(Resources.NewRecord)
                   .HtmlAttributes(new { @id = "cmdAddNewRecord" });

            tool.Excel().Text(Resources.ExporttoExcel);
        })
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                .Scrollable(scrollable => scrollable.Height(430))
                .Pageable(p => p.Refresh(true))
                .Sortable()
                .Navigatable()
                .Groupable()
                .Scrollable(scr => scr.Height(370))
                .Filterable()
                .Excel(excel => excel
                .FileName("TB_HotelAttribute.xlsx")
                .Filterable(true))
               
)

<script id="AddNewRecord">



    $("#cmdAddNewRecord").click(function (e) {

        var table = $("#TB_HotelAttribute_Grid").data("kendoGrid");
        var sorting = table.dataSource.sort();

        if (sorting) {
            table.dataSource.sort(null);
        }
        table.addRow();
        e.preventDefault();
        //put custom logic here
    });
</script>
<script>



    $("#btnfilter").click(function () {
        $filter = new Array();

        $PartText = $("#Hotel").data("kendoDropDownList").text();
        $PartValue = $("#Hotel").val();

        $AttributeText = $("#Attribute").data("kendoDropDownList").text();
        $AttributeValue = $("#Attribute").val();


        if ($PartValue) {
            $filter.push({ field: "Hotel", operator: "contains", value: $PartText });
        }

        if ($AttributeValue) {
            $filter.push({ field: "Attribute", operator: "contains", value: $AttributeText });
        }
        var grid = $("#TB_HotelAttribute_Grid").data("kendoGrid");
        grid.dataSource.filter($filter);
    });


    var AllSelectText = '@Resources.ListAllExpression'

    $(document).ready(function () {
        var json = {}
        $.ajax({
            type: "GET",
            url: "/DropDownLists/GetHotels",
            data: json,
            datatype: "json",
            success: function (data) {

                $("#Hotel").kendoDropDownList({
                    filter: "contains",
                    Name: "Hotel",
                    optionLabel: AllSelectText,
                    dataTextField: "Name",
                    dataValueField: "ID",
                    dataSource: data
                });

            }
        })
    });
   
        $(document).ready(function () {
        var json = {}
        $.ajax({
            type: "GET",
            url: "/DropDownLists/GetHotelAttribute",
            data: json,
            datatype: "json",
            success: function (data) {

                $("#Attribute").kendoDropDownList({
                    filter: "contains",
                    Name: "AttributeID",
                    optionLabel: AllSelectText,
                    dataTextField: "Attribute",
                    dataValueField: "AttributeID ",
                    dataSource: data
                });

            }
        })
    });


       
   


    function clearFiter() {
        $("form.k-filter-menu button[type='reset']").trigger("click");
    }

    $("#btnClearFilter").click(function (e) {
        e.preventDefault();
        var datasource = $("#TB_HotelAttribute_Grid").data("kendoGrid").dataSource;

        datasource.filter([]);

        var dropdownlistPart = $("#Hotel").data("kendoDropDownList");
        dropdownlistPart.select("");


        var dropdownlistPart = $("#Attribute").data("kendoDropDownList");
        dropdownlistPart.select("");
    });

</script>