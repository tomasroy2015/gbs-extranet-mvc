@model gbsExtranetMVC.Models.Repositories.HotelExt
@using Resources
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color: black; text-align:center">Property Information</h1>

<style>
    .tblUsers {
        text-align: left;
    }

        .tblUsers th, td {
            padding-top: 10px;
        }

        .tblUsers td {
            padding-left: 15px;
        }
</style>

<div id="content" class="span10">
    @using (Html.BeginForm("PropertyOpeartionsEdit", "Management", FormMethod.Post))
    {
        @Html.HiddenFor(u => u.ID)
        <div id="qms-detail-table-wrapper" class="center">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.ID, Resources.HotelID)
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.ID, new { @class = "k-textbox", @readonly = "readonly" })
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.Name, Resources.HotelName)
                            @Html.Label("*", new { @class = "requiredfiled" })
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.Name, new { @class = "k-textbox" })
                            <div>
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.Name, Resources.Latitude)
                            @Html.Label("*", new { @class = "requiredfiled" })
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.Name, new { @class = "k-textbox" })
                            <div>
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.Name, Resources.Longitude)
                            @Html.Label("*", new { @class = "requiredfiled" })
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.Name, new { @class = "k-textbox" })
                            <div>
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.LabelFor(m => m.CountryName, Resources.Country)
                        </th>
                        <td>
                            @(Html.Kendo().DropDownListFor(m => m.CountryID)
                                .Name("Country")
                                .OptionLabel("Select Country...")
                                .BindTo((SelectList)ViewBag.Countries)
                                .HtmlAttributes(new { @style = "width: 200px;" })
                            )
                            <div>
                                @Html.ValidationMessageFor(m => m.CountryName)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.RegionName, Resources.Region)
                            @Html.Label("*", new { @class = "requiredfiled" })
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.RegionName, new { @class = "k-textbox" })
                            <div>
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.MainRegionName, Resources.MainRegion)
                        </th>
                        <td>
                            @(Html.Kendo().DropDownListFor(m => m.RegionID)
                                .Name("Mainregion")
                                .OptionLabel("Select...")
                .BindTo((SelectList)ViewBag.MainRegions)
                                .HtmlAttributes(new { @style = "width: 200px;" })
                            )
                            <div>
                                @Html.ValidationMessageFor(m => m.CountryName)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.Address, Resources.HotelAddress)
                            @Html.Label("*", new { @class = "requiredfiled" })
                        </th>
                        <td>
                            @Html.TextAreaFor(m => m.Address, new { @class = "k-textbox" })
                            <div>
                                @Html.ValidationMessageFor(m => m.Address)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.PostCode, Resources.HotelPostCode)
                            @Html.Label("*", new { @class = "requiredfiled" })
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.PostCode, new { @class = "k-textbox" })
                            <div>
                                @Html.ValidationMessageFor(m => m.PostCode)
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>
                            @Html.LabelFor(m => m.Phone, Resources.HotelPhone)
                            @Html.Label("*", new { @class = "requiredfiled" })
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.Phone, new { @class = "k-textbox" })
                            <div>
                                @Html.ValidationMessageFor(m => m.PostCode)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.Fax, Resources.HotelFax)
                            @Html.Label("*", new { @class = "requiredfiled" })
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.Fax, new { @class = "k-textbox" })
                            <div>
                                @Html.ValidationMessageFor(m => m.PostCode)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.FirmID, Resources.Firm)
                        </th>
                        <td>
                            @(Html.Kendo().DropDownListFor(m => m.FirmID)
                                .Name("Firm")
                                .OptionLabel("Select Firm...")
                                .BindTo((SelectList)ViewBag.Firm)
                                .HtmlAttributes(new { @style = "width: 200px;" })
                            )
                            <div>
                                @Html.ValidationMessageFor(m => m.FirmName)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.HotelTypeID, Resources.HotelType)
                        </th>
                        <td>
                            @(Html.Kendo().DropDownListFor(m => m.HotelTypeID)
                                .Name("HotelTypeID")
                                .OptionLabel("Select...")
                                .BindTo((SelectList)ViewBag.PropertyType)
                                .HtmlAttributes(new { @style = "width: 200px;" })
                            )
                            <div>
                                @Html.ValidationMessageFor(m => m.HotelTypeID)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.HotelClassID, Resources.HotelClass)
                        </th>
                        <td>
                            @(Html.Kendo().DropDownListFor(m => m.HotelClassID)
                                .Name("HotelClassID")
                                .OptionLabel("Select...")
                                .BindTo((SelectList)ViewBag.TypeHotelClass)
                                .HtmlAttributes(new { @style = "width: 200px;" })
                            )
                            <div>
                                @Html.ValidationMessageFor(m => m.HotelTypeID)
                            </div>
                        </td>
                    </tr>

                 


                    <tr>
                        <th>
                            @Html.LabelFor(m => m.HotelChainID, Resources.HotelChain)
                        </th>
                        <td>
                            @(Html.Kendo().DropDownListFor(m => m.HotelChainID)
                                .Name("HotelChainID")
                                .OptionLabel("Select...")
                                .BindTo((SelectList)ViewBag.TypeHotelChain)
                                .HtmlAttributes(new { @style = "width: 200px;" })
                            )
                            <div>
                                @Html.ValidationMessageFor(m => m.HotelChainID)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.HotelAccommodationTypeID, Resources.AccommodationType)
                        </th>
                        <td>
                            @(Html.Kendo().DropDownListFor(m => m.HotelAccommodationTypeID)
                                .Name("HotelAccommodationTypeID")
                                .OptionLabel("Select...")
                                .BindTo((SelectList)ViewBag.TypeHotelAccommodation)
                                .HtmlAttributes(new { @style = "width: 200px;" })
                            )
                            <div>
                                @Html.ValidationMessageFor(m => m.HotelAccommodationTypeID)
                            </div>
                        </td>
                    </tr>

                    <tr>
                        <th>
                            @Html.LabelFor(m => m.Name, Resources.RoomCount)
                            @Html.Label("*", new { @class = "requiredfiled" })
                        </th>
                        <td>
                            @Html.TextBoxFor(m => m.Name, new { @class = "k-textbox" })
                            <div>
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    }
</div>

