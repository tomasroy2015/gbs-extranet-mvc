    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script type="text/javascript">

        function RefreshGrid(e) {
            this.read();
        }
</script>

<h1>Titles</h1>

@(Html.Kendo().Grid<gbsExtranetMVC.Models.Repositories.TempExt>()
    .Name("Grid")
    .DataSource(dataSource => dataSource
    .Ajax().Events(ev => ev.Sync("RefreshGrid"))
    .PageSize(10)
            .Events(ev => ev.Error("DisplayGridError"))
    .Model(model => model.Id(p => p.TempID))
    .Create(update => update.Action("_Create", "Temp"))
                    .Read(read => read.Action("_Read", "Temp"))
                    .Update(update => update.Action("_Update", "Temp"))
                    .Destroy(update => update.Action("_Destroy", "Temp"))
    .ServerOperation(false)
    )

    .Columns(columns =>
    {
        columns.Bound(p => p.Temp).Title("Temp").Width(100);
        columns.Bound(p => p.RowVersion_Str).Hidden(true);

        columns.Command(command =>
        {
            command.Edit().UpdateText(ViewBag.UpdateText);
            command.Destroy();
        }).Width(172);
    })
    .ToolBar(tool =>
    {
        tool.Custom().Name("cmdAddNewRecord")
        .Text("Add New Record")
        .HtmlAttributes(new { @id = "cmdAddNewRecord" });
    })

    .Scrollable()
    .Pageable(p => p.Refresh(true))
    .Sortable()
    .Navigatable()
    .Scrollable(scr => scr.Height(370))
    .Filterable(filer => filer.Operators(o => o.ForString(s => s.Clear().Contains("Contains"))))

)

<script>
        $("#cmdAddNewRecord").click(function (e) {

            var table = $("#Grid").data("kendoGrid");
            var sorting = table.dataSource.sort();

            if (sorting) {
                table.dataSource.sort(null);
            }
            table.addRow();
            e.preventDefault();
            //put custom logic here
        });
</script>




