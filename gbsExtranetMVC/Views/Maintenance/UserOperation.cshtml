@(Html.Kendo().Grid<gbsExtranetMVC.Models.Repositories.UserOperationExt>()
                    .Name("UserOperation_Grid")
        .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .ServerOperation(true)
        .Model(model =>
        {
            model.Id(p => p.ID);
        })

                                     .Read(read => read.Action("_Read", "UserOperation"))

        )

        .Columns(columns =>
        {
            columns.Bound(p => p.ID).Width(70).Locked(true);
            columns.Bound(p => p.User).Title(MessageColumnCaptions.UserIDUP).Width(150);
            columns.Bound(p => p.Date).Title(MessageColumnCaptions.DateUP).ClientTemplate("#= kendo.toString(Date,'dd/MM/yyyy HH:mm:ss') #").Width(200);
            columns.Bound(p => p.OperationType).Title(MessageColumnCaptions.OperationTypeIDUP).Width(250);
            columns.Bound(p => p.Part).Title(MessageColumnCaptions.PartIDUP).Width(120);
            columns.Bound(p => p.RecordID).Title(MessageColumnCaptions.RecordIDUP).Width(150);
            columns.Bound(p => p.UserSessionID).Title(MessageColumnCaptions.UserSessionIDUP).Width(150);
            columns.Bound(p => p.IPAddress).Title(MessageColumnCaptions.IPAddressUP).Width(200);


        })
        .ToolBar(tool =>
        {

            tool.Excel();
        })
                .Scrollable(scrollable => scrollable.Height(430))
                .Pageable(p => p.Refresh(true))
                .Sortable()
                .Navigatable()
                .Groupable()
                .Scrollable(scr => scr.Height(370))
                .Filterable()
                .Excel(excel => excel
                .FileName("UserOperation.xlsx")
                .Filterable(true))

)

<script id="AddNewRecord">

    $("#btnClearFilter").click(function (e) {
        e.preventDefault();
        var datasource = $("#UserOperation_Grid").data("kendoGrid").dataSource;
        //Clear Custom filters:
        datasource.filter([]);
        //Clear Fields
        $("#txtFilterUserID").val('')
        $("#txtFilterUserSessionID").val('')
        $("#txtFilterRecordID").val('')
        //$("#datetimepickerEnd").val('');
        //$("#datetimepickerStart").val('');
        $("#datetimepickerStart").data("kendoDatePicker").value(null);
        $("#datetimepickerEnd").data("kendoDatePicker").value(null);

        var dropdownlistOperationType = $("#drpOperationType").data("kendoDropDownList");
        dropdownlistOperationType.select("");
        var dropdownlistPart = $("#drpPart").data("kendoDropDownList");
        dropdownlistPart.select("");
        //document.getElementById('ChkFilterCommon').checked = false
    });

    $("#btnfilter").click(function () {
        $filter = new Array();
        $UserID = $("#txtFilterUserID").val();
        $UserSessionID = $("#txtFilterUserSessionID").val();
        $Record = $("#txtFilterRecordID").val();

        $StartDate = $("#datetimepickerStart").data("kendoDatePicker").value();
        $EndDate = $("#datetimepickerEnd").data("kendoDatePicker").value();

        $PartText = $("#drpPart").data("kendoDropDownList").text();
        $PartValue = $("#drpPart").val();

        $OperationTypeText = $("#drpOperationType").data("kendoDropDownList").text();
        $OperationTypeValue = $("#drpOperationType").val();


        // $Part1 = $("#drpPart").data("kendoDropDownList").value();
        //  alert($Part1)
      
        if ($UserID) {
            $filter.push({ field: "UserID", operator: "equals", value: $UserID });
        }
        if ($UserSessionID) {
            $filter.push({ field: "UserSessionID", operator: "contains", value: $UserSessionID });
        }
        if ($Record) {
            $filter.push({ field: "RecordID", operator: "contains", value: $Record });
        }
        if ($StartDate) {
            $filter.push({ field: "Date", operator: "IsGreaterThanOrEqualTo", value: $StartDate });
        }
        if ($EndDate) {
            $filter.push({ field: "Date", operator: "IsLessThanOrEqualTo", value: $EndDate });
        }
        if ($PartValue) {
            $filter.push({ field: "Part", operator: "contains", value: $PartText });
        }

        if ($OperationTypeValue) {
            $filter.push({ field: "OperationType", operator: "contains", value: $OperationTypeText });
        }

        var grid = $("#UserOperation_Grid").data("kendoGrid");
        grid.dataSource.filter($filter);
    });

    $(document).ready(function () {
        // create DateTimePicker from input HTML element
        //$("#datetimepicker").kendoDateTimePicker({
        //    value: new Date()
        //});



        $("#datetimepickerStart").kendoDatePicker({
            animation: {
                close: {
                    effects: "zoom:out",
                    duration: 300
                }
            }
        });
        $("#datetimepickerEnd").kendoDatePicker({
            animation: {
                close: {
                    effects: "zoom:out",
                    duration: 300
                }
            }
        });



        var json = {}
        $.ajax({
            type: "GET",
            url: "/UserOperation/_ReadOperationType",
            data: json,
            datatype: "json",
            success: function (data) {

                $("#drpOperationType").kendoDropDownList({
                    filter: "contains",
                    dataTextField: "Name",
                    dataValueField: "ID ",
                    // dataValueField: "Name",
                    dataSource: data,
                    optionLabel: "All..."
                });

            }
        })

        $.ajax({
            type: "GET",
            url: "/DailyStatistics/_ReadPart",
            data: json,
            datatype: "json",
            success: function (data) {

                $("#drpPart").kendoDropDownList({
                    filter: "contains",
                    dataTextField: "Name",
                    dataValueField: "ID ",
                    // dataValueField: "Name",
                    dataSource: data,
                    optionLabel: "All..."
                });

            }
        })
    });

    function clearFiter() {
        $("form.k-filter-menu button[type='reset']").trigger("click");
    }
</script>

