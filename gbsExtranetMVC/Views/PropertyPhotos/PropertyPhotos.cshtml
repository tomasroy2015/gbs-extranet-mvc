            init: {
                FilesAdded: function (up, files) {
                    plupload.each(files, function (file) {
                        if (up.files.length > maxfiles) {
                            up.removeFile(file);
                        }
                        var i = 0;
                        while (i <= up.files.length) {
                            ultimo = up.files.length;
                            if (ultimo > 1) {
