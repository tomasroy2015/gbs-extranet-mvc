@using gbsExtranetMVC.Helpers

@model gbsExtranetMVC.Models.ForgottenPasswordModel

<script type="text/javascript">

        $(document).ready(function () {

            $("#Email").keypress(function (e) {
                if (e.which == 13) {
                  return(IsEmail())
                }
            });
        });

    function validateEmail(email) {
    var re = /^(([^<>()[\]\\.,;:\s@@\"]+(\.[^<>()[\]\\.,;:\s@@\"]+)*)|(\".+\"))@@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\])|(([a-zA-Z\-0-9]+\.)+[a-zA-Z]{2,}))$/;
    return re.test(email);
}

        function IsEmail() {

            var email = $("#Email");

            if (email.val() != "" && validateEmail(email.val())) {
                $("#ForgottonPassword").submit();
            }
            else {
                email.css('background', '#FFE1EC');
                var lblEmailValidation = $("#lblEmailValidation");
                lblEmailValidation.css('display', '');
                lblEmailValidation.css('color', 'red');
                lblEmailValidation.text('Email Address is not Valid, e.g. user@email.com');
                return false;
            }
        }

</script>

<p><h3>Please enter your email address, to receive your login details:</h3></p>

@using (Html.BeginForm()) {

    <div>
        <fieldset>
            <legend></legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.Email)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Email, new { @class="k-textbox"})

            </div>

            <div>
                @Html.ValidationMessageFor(m => m.Email)
                <div id="lblEmailValidation"></div>
            </div>

            <br />
            @if (ViewData["status"] != null)
            {
            <h3 style="color:Green"> @ViewData["status"].ToString() </h3>
            }
            <p>
               @*@Html.Raw(GlobalHelper.SubmitButton("Submit","IsEmail();"))*@
            </p>
        </fieldset>

    </div>

}

