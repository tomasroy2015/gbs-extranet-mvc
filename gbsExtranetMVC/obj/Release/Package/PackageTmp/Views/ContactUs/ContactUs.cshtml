@model gbsExtranetMVC.Models.Repositories.ContactUsExt
@using Resources
@{
    ViewBag.Title = "ContactUs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .tblUsers {
        text-align: left;
    }

        .tblUsers th, td {
            padding-top: 10px;
        }

        .tblUsers td {
            padding-left: 15px;
        }
</style>

<h2 style="color: black; text-align: center;">@Resources.ContactUs</h2>

<div id="content" class="span10">
    @using (Html.BeginForm("ContactUs", "ContactUs", FormMethod.Post))
    {
         <div id="qms-detail-table-wrapper" class="center">
            <h5>@Resources.AdminContactInfo</h5>
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                       
                    @foreach (var val in ViewBag.Value)
                    { 
                        
                    <tr>
                         @if (val.Phone != "")
                         {

                        <th>
                            @Html.LabelFor(m => m.Phone, Resources.Phone)
                        </th>
                        <td>                                             
                           
                                 @val.Phone
                           
                           
                            
                        </td>
                        }
                    </tr>
                           
                    }
                   @foreach (var val in ViewBag.Value)
                   {
                       
                    <tr>
                       @if (val.Email != "")
                       {
                        <th>
                            @Html.LabelFor(m => m.Email, Resources.Email)
                        </th>
                        <td style="cursor:pointer">
                           
                           
                            @val.Email
                            
                        </td>
                        }
                    </tr>
                            
                  }
                 @foreach (var val in ViewBag.Value)
                 {
                     
                    <tr>
                            @if(val.Fax =="")
                            {
                        <th>
                            
                            @Html.LabelFor(m => m.Fax, Resources.Fax)
                        </th>
                        <td>
                                          
                             @val.Fax     
                                                
                        </td>
                            }
                    </tr>
                          
                    }
                   </table>
                </div>
             </div>
    }
        </div>

