@(Html.Kendo().DropDownList()
                       .Name("AttributeHeaderID")
            .OptionLabel("-- Select --")
            .HtmlAttributes(new { style = "width:100%" })
                   .DataTextField("AttributeCategory")
               .DataValueField("AttributeHeaderID")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetAttributeCategory", "DropDownLists");
        });
    })
)