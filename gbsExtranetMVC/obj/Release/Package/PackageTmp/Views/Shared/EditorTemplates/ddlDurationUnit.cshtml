@(Html.Kendo().DropDownList()
                        .Name("UnitID")
            .OptionLabel("-- Select --")
            .HtmlAttributes(new { style = "width:100%" })
                                .DataTextField("Unit")
                            .DataValueField("UnitID")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetUnit", "DropDownLists");
        });
    })
)