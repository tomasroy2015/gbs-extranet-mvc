@(Html.Kendo().Grid<gbsExtranetMVC.Models.Repositories.TB_BusinessPartnerCancelPolicyExt>()
                                    .Name("TB_BusinessPartnerCancelPolicyExt_Grid")
        .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(25)
        .Events(events => events.Error("onError").Sync("RefreshGrid"))
        .ServerOperation(true)
        .Model(model =>
        {
            model.Id(p => p.ID);
            model.Field(p => p.ID).Editable(false);
        })
              .Create(update => update.Action("_Create", "TB_BusinessPartnerCancelPolicy"))
             .Read(read => read.Action("_Read", "TB_BusinessPartnerCancelPolicy", new { TableID = (int)ViewBag.TableID }))
             .Update(update => update.Action("_Update", "TB_BusinessPartnerCancelPolicy"))
            .Destroy(destroy => destroy.Action("_Destroy", "TB_BusinessPartnerCancelPolicy"))
        )

                    .Columns(columns =>
                    {
                        columns.Command(

                           command =>
                           {
                               command.Edit().UpdateText(Resources.Update).CancelText(Resources.Cancel).Text(Resources.Edit);
                               command.Destroy().Text(Resources.Delete);
                           }).Width(170).Locked(true);

                        columns.Bound(p => p.ID).Width(100).Locked(true); //EditorTemplateName (/Shared/EditorTempaltes/ddlCountries) used to Display Dropdown list and it will return Int value to Controller
                        columns.Bound(p => p.BusinessPartner).EditorTemplateName("ddlBusinessPartner").Title(MessageColumnCaptions.TB_BusinessPartnerCancelPolicyCaption("BusinessPartnerID")).Width(200).Locked(true);
                        columns.Bound(p => p.Part).EditorTemplateName("ddlPart").Title(MessageColumnCaptions.TB_BusinessPartnerCancelPolicyCaption("PartID")).Width(200);
                        columns.Bound(p => p.CancelType).EditorTemplateName("ddlCancelType").Title(MessageColumnCaptions.TB_BusinessPartnerCancelPolicyCaption("CancelTypeID")).Width(200);
                        columns.Bound(p => p.RefundableDayCount).Title(MessageColumnCaptions.TB_BusinessPartnerCancelPolicyCaption("RefundableDayCount")).Width(200);
                        columns.Bound(p => p.PenaultyRate).EditorTemplateName("ddlPenaltyRate").Title(MessageColumnCaptions.TB_BusinessPartnerCancelPolicyCaption("PenaltyRateTypeID")).Width(200);
                        columns.Bound(p => p.Active).Title(MessageColumnCaptions.TB_BusinessPartnerCancelPolicyCaption("Active"))
                            .ClientTemplate("<div style='text-align:center;'> #if(Active){# <img src='/Images/checked.gif' alt='checked'> #} else {# <img src='/Images/red_cross.png' alt='redCross'> #}# </div>").Width(120);

                    })
                .ToolBar(tool =>
                {
                    tool.Custom().Name("cmdAddNewRecord")
                .Text(Resources.NewRecord)
                .HtmlAttributes(new { @id = "cmdAddNewRecord" });
                    tool.Excel().Text(Resources.ExporttoExcel);
                })
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                    .Scrollable(scrollable => scrollable.Height(430))
        //.Scrollable().HtmlAttributes(new { @style = "width:1200px;" })

                .Pageable(p => p.Refresh(true))
                .Sortable()
                .Navigatable()
                .Groupable()
                .Scrollable(scr => scr.Height(370))
                .Filterable()
                .Excel(excel => excel
                .FileName("TB_BusinessPartnerCancelPolicyExt.xlsx")
                .Filterable(true))

)

