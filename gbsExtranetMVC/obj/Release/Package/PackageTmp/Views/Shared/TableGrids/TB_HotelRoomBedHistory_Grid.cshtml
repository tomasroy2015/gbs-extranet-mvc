@using Resources
@using MessageColumnCaptions


<h1 style="text-align:center;">@MessageColumnCaptions.DynamicPageName("TB_HotelRoomBedHistory")</h1>


<div class="jumbotron" style="text-align: left; margin-bottom: 50px;border-radius:8px;padding: 10px;font-size: 15px;font-weight: 100;line-height: 1.142857;">
    <div class="row">

        <div class="col-md-12">
            <div class="col-md-5  col-sm-5">

                <div class="col-md-5  col-sm-5">
                    <label>@MessageColumnCaptions.TB_HotelRoomBedHistory("HotelRoomBedID") </label>
                </div>
                <div class="col-md-7  col-sm-7">
                    <input id="txtattributeid" style="width: 100%;" class="form-control" />
                </div>

            </div>
            <div class="col-md-4  col-sm-4">
                <div class="col-md-4  col-sm-4">
                    <label> @MessageColumnCaptions.TB_HotelRoomBedHistory("BedTypeID")</label>
                </div>
                <div class="col-md-8  col-sm-8">
                    <input id="drpbedtype" style="width: 100%; " />
                </div>

            </div>


        </div>
        <div class="col-md-12">
            <div class="col-md-5  col-sm-5">
                <div class="col-md-5  col-sm-5" style="padding: 5px;">
                    <label> @MessageColumnCaptions.TB_HotelRoomBedHistory("LogDateTime") (@Resources.FilterLowerLimitDescription)</label>
                </div>
                <div class="col-md-7  col-sm-7" style="padding: 5px;">
                    <input type="text" id="datetimepickerStart" placeholder="@Resources.DateFieldDescription" style="width: 100%; height:25px;" />
                </div>

            </div>
            <div class="col-md-5  col-sm-5">

                <div class="col-md-5  col-sm-5" style="padding: 5px;">
                    <label>@MessageColumnCaptions.TB_HotelRoomBedHistory("LogDateTime")  (@Resources.FilterUpperLimitDescription)</label>
                </div>
                <div class="col-md-7  col-sm-7" style="padding: 5px;">
                    <input type="text" id="datetimepickerEnd" placeholder="@Resources.DateFieldDescription" style="width: 100%; height:25px;" />
                </div>

            </div>

            <div class="col-md-2  col-sm-2" style="padding: 10px;">
                <button id="btnfilter" class="btn btn-info" onclick="Filter()">@Resources.Filter</button>
                <button class="btn btn-info" id="btnClearFilter" onclick="clearFiter()">@Resources.RemoveFilter</button>
            </div>
        </div>
    </div>
</div>

<script>

    $("#btnfilter").click(function () {

        $filter = new Array();
        $Roomattributeid = $("#txtattributeid").val();

        $Attribute = $("#drpattribute").data("kendoDropDownList").text();
        $Attributeid = $("#drpattribute").val();
        $StartDate = $("#datetimepickerStart").data("kendoDatePicker").value();
        $EndDate = $("#datetimepickerEnd").data("kendoDatePicker").value();

        if ($Attributeid) {
            $filter.push({ field: "Attribute", operator: "equals", value: String($Attribute) });
        }
        if ($Roomattributeid) {
            $filter.push({ field: "HotelRoomAttributeID", operator: "equals", value: $Roomattributeid });
        }
        if ($StartDate) {
            $filter.push({ field: "LogDateTime", operator: "IsGreaterThanOrEqualTo", value: $StartDate });
        }
        if ($EndDate) {
            $filter.push({ field: "LogDateTime", operator: "IsLessThanOrEqualTo", value: $EndDate });
        }
        var grid = $("#TB_HotelRoomBedHistory_Grid").data("kendoGrid");
        grid.dataSource.filter($filter);
    });
    var AllSelectText = '@Resources.ListAllExpression'
    $(document).ready(function () {

        $("#datetimepickerStart").kendoDatePicker({
            animation: {
                close: {
                    effects: "zoom:out",
                    duration: 300
                }
            }
        });
        $("#datetimepickerEnd").kendoDatePicker({
            animation: {
                close: {
                    effects: "zoom:out",
                    duration: 300
                }
            }
        });

        var json = {}
        $.ajax({
            type: "GET",
            url: "/DropDownLists/GetBedType",
            data: json,
            datatype: "json",
            success: function (data) {

                $("#drpbedtype").kendoDropDownList({

                    filter: "contains",

                    optionLabel: AllSelectText,
                    dataTextField: "BedType",
                    dataValueField: "BedTypeID ",
                    dataSource: data
                });

            }
        })

    });





    function clearFiter() {
        $("form.k-filter-menu button[type='reset']").trigger("click");
    }

    $("#btnClearFilter").click(function (e) {
        e.preventDefault();
        var datasource = $("#TB_HotelRoomBedHistory_Grid").data("kendoGrid").dataSource;

        datasource.filter([]);
        $("#datetimepickerStart").data("kendoDatePicker").value(null);
        $("#datetimepickerEnd").data("kendoDatePicker").value(null);
        $("#txtregion").val('');
        var dropdownlistPart = $("#drpHotel").data("kendoDropDownList");
        dropdownlistPart.select("");
    });

</script>

@(Html.Kendo().Grid<gbsExtranetMVC.Models.Repositories.TB_HotelRoomBedHistoryExt>()
                                        .Name("TB_HotelRoomBedHistory_Grid")
        .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(25)
        .ServerOperation(true)
        .Model(model =>
        {
            model.Id(p => p.ID);
            model.Field(p => p.ID).Editable(false);
        })
                .Read(read => read.Action("_Read", "TB_HotelRoomBedHistory", new { TableID = (int)ViewBag.TableID }))
        )

                .Columns(columns =>
                {


                    columns.Bound(p => p.ID).Width(150);
                    columns.Bound(p => p.HotelRoomBedID).Width(200).Title(MessageColumnCaptions.TB_HotelRoomBedHistory("HotelRoomBedID")).Width(350);
                    columns.Bound(p => p.OptionNo).Width(200).Title(MessageColumnCaptions.TB_HotelRoomBedHistory("OptionNo")).Width(350);
                    columns.Bound(p => p.HotelRoomID).Width(200).Title(MessageColumnCaptions.TB_HotelRoomBedHistory("HotelRoomID")).Width(350);
                    columns.Bound(p => p.BedType).Width(250).Title(MessageColumnCaptions.TB_HotelRoomBedHistory("BedTypeID"));
                    columns.Bound(p => p.Count).Width(250).Title(MessageColumnCaptions.TB_HotelRoomBedHistory("Count"));
                    columns.Bound(p => p.LogDateTime).Width(250).Title(MessageColumnCaptions.TB_HotelRoomBedHistory("LogDateTime"));
                    columns.Bound(p => p.LogUser).Width(250).Title(MessageColumnCaptions.TB_HotelRoomBedHistory("LogUserID"));

                })
                .ToolBar(tool =>
                {
                    // tool.Custom().Name("cmdAddNewRecord")
                    //.Text(Resources.NewRecord)
                    //.HtmlAttributes(new { @id = "cmdAddNewRecord" });
                    tool.Excel().Text(Resources.ExporttoExcel);
                })
        //.Editable(editable => editable.Mode(GridEditMode.InLine))
        //    .Scrollable(scrollable => scrollable.Height(430))
        //.Scrollable().HtmlAttributes(new { @style = "width:1200px;" })

                .Pageable(p => p.Refresh(true))
                .Sortable()
                .Navigatable()
                .Groupable()
                .Scrollable(scr => scr.Height(370))
                .Filterable()
                .Excel(excel => excel
                                    .FileName("TB_HotelRoomBedHistory.xlsx")
                .Filterable(true))

)



