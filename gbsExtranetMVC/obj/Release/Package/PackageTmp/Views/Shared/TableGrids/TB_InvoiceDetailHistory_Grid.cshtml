@using Resources
@using MessageColumnCaptions


<h1 style="text-align:center;">@MessageColumnCaptions.DynamicPageName("TB_InvoiceDetailHistory")</h1>


<div class="jumbotron" style="text-align: left; margin-bottom: 50px;border-radius:8px;padding: 10px;font-size: 15px;font-weight: 100;line-height: 1.142857;">
    <div class="row">

        <div class="col-md-12">
            <div class="col-md-5  col-sm-5">

                <div class="col-md-5  col-sm-5">
                    <label>@MessageColumnCaptions.TB_InvoiceDetailHistory("InvoiceDetailID") </label>
                </div>
                <div class="col-md-7  col-sm-7">
                    <input id="txtinvoicedetailid" style="width: 100%;" class="form-control" />
                </div>

            </div>
            <div class="col-md-4  col-sm-4">
                <div class="col-md-3  col-sm-3">
                    <label> @MessageColumnCaptions.TB_InvoiceDetailHistory("InvoiceID")</label>
                </div>
                <div class="col-md-8  col-sm-8">
                    <input id="drpinvoiceid" style="width: 100%; " />
                </div>

            </div>


        </div>
        <div class="col-md-12">
            <div class="col-md-5  col-sm-5">
                <div class="col-md-5  col-sm-5" style="padding: 5px;">
                    <label> @MessageColumnCaptions.TB_InvoiceDetailHistory("LogDateTime") (@Resources.FilterLowerLimitDescription)</label>
                </div>
                <div class="col-md-7  col-sm-7" style="padding: 5px;">
                    <input type="text" id="datetimepickerStart" placeholder="@Resources.DateFieldDescription" style="width: 100%; height:25px;" />
                </div>

            </div>
            <div class="col-md-5  col-sm-5">

                <div class="col-md-5  col-sm-5" style="padding: 5px;">
                    <label>@MessageColumnCaptions.TB_InvoiceDetailHistory("LogDateTime")  (@Resources.FilterUpperLimitDescription)</label>
                </div>
                <div class="col-md-7  col-sm-7" style="padding: 5px;">
                    <input type="text" id="datetimepickerEnd" placeholder="@Resources.DateFieldDescription" style="width: 100%; height:25px;" />
                </div>

            </div>

            <div class="col-md-2  col-sm-2" style="padding: 10px;">
                <button id="btnfilter" class="btn btn-info" onclick="Filter()">@Resources.Filter</button>
                <button class="btn btn-info" id="btnClearFilter" onclick="clearFiter()">@Resources.RemoveFilter</button>
            </div>
        </div>
    </div>
</div>

<script>

    $("#btnfilter").click(function () {

        $filter = new Array();
        $Invoice = $("#txtinvoicedetailid").val();
        $InvoiceID = $("#drpinvoiceid").val();
      
        $StartDate = $("#datetimepickerStart").data("kendoDatePicker").value();
        $EndDate = $("#datetimepickerEnd").data("kendoDatePicker").value();
        
        if ($Invoice) {
            $filter.push({ field: "InvoiceDetailID", operator: "equals", value: $Invoice });
        }
        if ($InvoiceID) {
            $filter.push({ field: "Invoice", operator: "equals", value: $InvoiceID });
        }
        if ($StartDate) {
            $filter.push({ field: "LogDateTime", operator: "IsGreaterThanOrEqualTo", value: $StartDate });
        }
        if ($EndDate) {
            $filter.push({ field: "LogDateTime", operator: "IsLessThanOrEqualTo", value: $EndDate });
        }
        var grid = $("#TB_InvoiceDetailHistory_Grid").data("kendoGrid");
        grid.dataSource.filter($filter);
    });
    var AllSelectText = '@Resources.ListAllExpression'
    $(document).ready(function () {

        $("#datetimepickerStart").kendoDatePicker({
            animation: {
                close: {
                    effects: "zoom:out",
                    duration: 300
                }
            }
        });
        $("#datetimepickerEnd").kendoDatePicker({
            animation: {
                close: {
                    effects: "zoom:out",
                    duration: 300
                }
            }
        });

        var json = {}
        $.ajax({
            type: "GET",
            url: "/DropDownLists/GetInvoiceID",
            data: json,
            datatype: "json",
            success: function (data) {

                $("#drpinvoiceid").kendoDropDownList({

                    filter: "contains",

                    optionLabel: AllSelectText,
                    dataTextField: "InvoiceID",
                    dataValueField: "InvoiceID",
                    dataSource: data
                });

            }
        })

    });





    function clearFiter() {
        $("form.k-filter-menu button[type='reset']").trigger("click");
    }

    $("#btnClearFilter").click(function (e) {
        e.preventDefault();
        var datasource = $("#TB_InvoiceDetailHistory_Grid").data("kendoGrid").dataSource;

        datasource.filter([]);
        $("#datetimepickerStart").data("kendoDatePicker").value(null);
        $("#datetimepickerEnd").data("kendoDatePicker").value(null);
        $("#txtinvoicedetailid").val('');

        var dropdownlistPart = $("#drpinvoiceid").data("kendoDropDownList");
        dropdownlistPart.select("");
    });

</script>

@(Html.Kendo().Grid<gbsExtranetMVC.Models.Repositories.TB_InvoiceDetailHistoryExt>()
                                    .Name("TB_InvoiceDetailHistory_Grid")
        .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(25)
        .ServerOperation(true)
        .Model(model =>
        {
            model.Id(p => p.ID);
            model.Field(p => p.ID).Editable(false);
        })
            .Read(read => read.Action("_Read", "TB_InvoiceDetailHistory", new { TableID = (int)ViewBag.TableID }))
        )

                .Columns(columns =>
                {
                    columns.Bound(p => p.ID).Width(150);
                    columns.Bound(p => p.InvoiceDetailID).Width(250).Title(MessageColumnCaptions.TB_InvoiceDetailHistory("InvoiceDetailID"));
                    columns.Bound(p => p.Invoice).Width(250).Title(MessageColumnCaptions.TB_InvoiceDetailHistory("InvoiceID"));
                    columns.Bound(p => p.ReservationID).Width(250).Title(MessageColumnCaptions.TB_InvoiceDetailHistory("ReservationID"));
                    columns.Bound(p => p.LogDateTime).Width(250).Title(MessageColumnCaptions.TB_InvoiceDetailHistory("LogDateTime"));
                    columns.Bound(p => p.Loguser).Width(250).Title(MessageColumnCaptions.TB_InvoiceDetailHistory("LogUserID"));

                })
                .ToolBar(tool =>
                {
                    tool.Excel().Text(Resources.ExporttoExcel);
                })
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                    .Scrollable(scrollable => scrollable.Height(430))
        //.Scrollable().HtmlAttributes(new { @style = "width:1200px;" })

                .Pageable(p => p.Refresh(true))
                .Sortable()
                .Navigatable()
                .Groupable()
                .Scrollable(scr => scr.Height(370))
                .Filterable()
                .Excel(excel => excel
                                    .FileName("TB_InvoiceDetailHistory.xlsx")
                .Filterable(true))

)




