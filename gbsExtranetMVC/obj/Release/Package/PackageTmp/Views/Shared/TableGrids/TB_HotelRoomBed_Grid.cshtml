    $("#btnfilter").click(function () {

        $filter = new Array();
        $hotelreservationid = $("#txthotelreservationid").val();
        $Active = "false";
        if ($('#chkactive').prop('checked')) {
            $Active = "true";
        }
        $dateText = $("#drpdate").data("kendoDropDownList").text();
        $dateid = $("#drpdate").val();
        if ($dateid) {
            $filter.push({ field: "Date", operator: "contains", value: String($dateText) });
        }
        if ($hotelreservationid) {
