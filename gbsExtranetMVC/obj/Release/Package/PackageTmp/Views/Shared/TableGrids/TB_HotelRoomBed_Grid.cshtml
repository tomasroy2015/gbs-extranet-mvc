        }

        if ($Active == "true") {

            $filter.push({ field: "Active", operator: "eq", value: $Active });
        }


        var grid = $("#TB_HotelRoomBed_Grid").data("kendoGrid");
        grid.dataSource.filter($filter);
    });


    var AllSelectText = '@Resources.ListAllExpression'

    $(document).ready(function () {
        var json = {}
        $.ajax({
            type: "GET",
            url: "/DropDownLists/GetBedType",
            data: json,
            datatype: "json",
            success: function (data) {

                $("#drpbedtype").kendoDropDownList({

                    filter: "contains",
                    optionLabel: AllSelectText,
                    dataTextField: "BedType",
                    dataValueField: "BedTypeID ",
                    dataSource: data
                });

            }
        })
    });



    function clearFiter() {
        $("form.k-filter-menu button[type='reset']").trigger("click");
    }

    $("#btnClearFilter").click(function (e) {
        e.preventDefault();
        var datasource = $("#TB_HotelRoomBed_Grid").data("kendoGrid").dataSource;
        //Clear Custom filters:
        datasource.filter([]);

        $("#txthotelreservationid").val('');
        document.getElementById('chkactive').checked = false

    });
    function RefreshGrid(e) {
        this.read();
    }
</script>

@(Html.Kendo().Grid<gbsExtranetMVC.Models.Repositories.TB_HotelRoomBedExt>()
                                    .Name("TB_HotelRoomBed_Grid")
        .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(25)
               .Events(events => events.Error("onError").Sync("RefreshGrid"))
        .ServerOperation(true)
        .Model(model =>
        {
            model.Id(p => p.ID);
            model.Field(p => p.ID).Editable(false);
        })
                 .Create(update => update.Action("_Create", "TB_HotelRoomBed"))
                                            .Read(read => read.Action("_Read", "TB_HotelRoomBed", new { TableID = (int)ViewBag.TableID }))
                                            .Update(update => update.Action("_Update", "TB_HotelRoomBed"))
                                            .Destroy(destroy => destroy.Action("_Destroy", "TB_HotelRoomBed"))


        )

                .Columns(columns =>
                {
                    columns.Command(

                      command =>
                      {
                          command.Edit().UpdateText(Resources.Update).CancelText(Resources.Cancel).Text(Resources.Edit);
                          command.Destroy().Text(Resources.Delete);
                      }).Locked(true).Width(180);

                    columns.Bound(p => p.ID).Width(150);
                    columns.Bound(p => p.OptionNo).Width(200).Title(MessageColumnCaptions.TB_HotelRoomBed("OptionNo"));
                    columns.Bound(p => p.HotelRoomID).Width(200).Title(MessageColumnCaptions.TB_HotelRoomBed("HotelRoomID")).EditorTemplateName("ddlHotelRoomID").Width(350);
                    columns.Bound(p => p.BedType).Width(250).Title(MessageColumnCaptions.TB_HotelRoomBed("BedTypeID")).EditorTemplateName("ddlBedType").Width(350);
                    columns.Bound(p => p.Count).Width(250).Title(MessageColumnCaptions.TB_HotelRoomBed("Count"));
                  


                })
                .ToolBar(tool =>
                {
                    tool.Custom().Name("cmdAddNewRecord")
                   .Text(Resources.NewRecord)
                   .HtmlAttributes(new { @id = "cmdAddNewRecord" });
                    tool.Excel().Text(Resources.ExporttoExcel);
                })
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                    .Scrollable(scrollable => scrollable.Height(430))
        //.Scrollable().HtmlAttributes(new { @style = "width:1200px;" })

                .Pageable(p => p.Refresh(true))
                .Sortable()
                .Navigatable()
                .Groupable()
                .Scrollable(scr => scr.Height(370))
                .Filterable()
                .Excel(excel => excel
                        .FileName("TB_HotelRoomBed.xlsx")
                .Filterable(true))

)

