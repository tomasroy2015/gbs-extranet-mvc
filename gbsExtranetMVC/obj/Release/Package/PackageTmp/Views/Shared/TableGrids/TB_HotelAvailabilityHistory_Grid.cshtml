@using Resources
@using MessageColumnCaptions

<h1 style="color: black; text-align:center">@MessageColumnCaptions.DynamicPageName("TB_HotelAvailabilityHistory")</h1>

<div class="jumbotron" style="text-align: left; margin-bottom: 50px;border-radius:8px;padding: 10px;font-size: 15px;font-weight: 100;line-height: 1.142857;">
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-5 col-sm-5">
                <div class="col-md-4 col-sm-4 " style="padding: 8px;">
                    <label>@MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("HotelAvailabilityID")</label>
                </div>
                <div class="col-md-7 col-sm-7">
                    <input id="txtFilterID" type="text" class="form-control" style="width:100%" />
                </div>
            </div>
            <div class="col-md-5 col-sm-5">
                <div class="col-md-4 col-sm-4 " style="padding: 8px;">
                    <label>@MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("HotelRoomID")</label>
                </div>
                <div class="col-md-7 col-sm-7">
                    <input id="txtFilterCode" type="text" class="form-control" style="width:100%" />
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="col-md-4  col-sm-4" style="padding: 0px;">
                <div class="col-md-6  col-sm-6" style="padding: 8px;">
                    <label>@MessageColumnCaptions.LogDate (@Resources.FilterLowerLimitDescription)</label>
                </div>
                <div class="col-md-6  col-sm-6" style="padding: 8px;">
                    <input type="text" id="datetimepickerStart" placeholder="@Resources.DateFieldDescription" style="width: 100%;" />
                </div>

            </div>
            <div class="col-md-4 col-sm-4" style="padding: 0px;">

                <div class="col-md-6  col-sm-6" style="padding: 8px;">
                    <label>@MessageColumnCaptions.LogDate (@Resources.FilterUpperLimitDescription)</label>
                </div>
                <div class="col-md-6  col-sm-6" style="padding: 8px;">
                    <input type="text" id="datetimepickerEnd" placeholder="@Resources.DateFieldDescription" style="width: 100%;" />
                </div>

            </div>
            <div class="col-md-2  col-sm-2" style="padding: 10px;">
                <button id="btnfilter" class="btn btn-info" onclick="Filter()">@Resources.Filter</button>
                <button class="btn btn-info" id="btnClearFilter" onclick="clearFiter()">@Resources.RemoveFilter</button>
            </div>
        </div>
    </div>
</div>

@(Html.Kendo().Grid<gbsExtranetMVC.Models.Repositories.TB_HotelAvailabilityHistoryExt>()
                                .Name("TB_HotelAvailabilityHistory_Grid")
        .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .ServerOperation(true)
        .Model(model =>
        {
            model.Id(p => p.ID);
            model.Field(p => p.ID).Editable(true);
        })

                  .Read(read => read.Action("_Read", "TB_HotelAvailabilityHistory", new { TableID = (int)ViewBag.TableID }))

        )

        .Columns(columns =>
        {


            columns.Bound(p => p.ID).Width(100).Title(MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("ID"));
            columns.Bound(p => p.HotelAvailabilityID).Title(MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("HotelAvailabilityID")).Width(120);
            columns.Bound(p => p.Room).Title(MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("HotelRoomID")).Width(100);
            columns.Bound(p => p.Date).Title(MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("DateID")).Width(120);
            columns.Bound(p => p.RoomCount).Title(MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("RoomCount")).Width(120);
            columns.Bound(p => p.CTA).Title(MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("CloseToArrival")).Width(100);
            columns.Bound(p => p.CTD).Title(MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("CloseToDeparture")).Width(100);
            columns.Bound(p => p.MinimumStay).Title(MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("MinimumStay")).Width(120);
            columns.Bound(p => p.LogDate).Title(MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("LogDateTime")).ClientTemplate("#= kendo.toString(LogDate,'dd/MM/yyyy HH:mm:ss') #").Width(150);
            columns.Bound(p => p.LogUser).Title(MessageColumnCaptions.TB_HotelAvailabilityHistoryCaption("LogUserID")).Width(120);
        })
                .ToolBar(tool =>
                    {
                        tool.Excel().Text(Resources.ExporttoExcel);

                    })
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                .Scrollable(scrollable => scrollable.Height(430))
                .Pageable(p => p.Refresh(true))
                .Sortable()
                .Navigatable()
                .Groupable()
                .Scrollable(scr => scr.Height(370))
                .Filterable()
                        .Excel(excel => excel
                        .FileName("TB_HotelAvailabilityHistory.xlsx")
                    .Filterable(true))

)

<script>
    $("#btnfilter").click(function () {
        // alert("dfgd")
        $filter = new Array();
        $StartDate = $("#datetimepickerStart").data("kendoDatePicker").value();
      //  alert($StartDate)
        $EndDate = $("#datetimepickerEnd").data("kendoDatePicker").value();
     //   alert($EndDate)
        $PartValue = $("#txtFilterCode").val();
      //  alert($PartValue)
        $Code = $("#txtFilterID").val();
     //   alert($Code)

        if ($PartValue) {
            $filter.push({ field: "Room", operator: "Equal", value: $PartValue });
        }
        if ($Code) {
            $filter.push({ field: "HotelAvailabilityID", operator: "Equal", value: $Code });
        }
        if ($StartDate) {
            $filter.push({ field: "LogDate", operator: "IsGreaterThanOrEqualTo", value: $StartDate });
        }
        if ($EndDate) {
            $filter.push({ field: "LogDate", operator: "IsLessThanOrEqualTo", value: $EndDate });
        }

        var grid = $("#TB_HotelAvailabilityHistory_Grid").data("kendoGrid");
        grid.dataSource.filter($filter);
    });

    $(document).ready(function () {
        $("#datetimepickerStart").kendoDatePicker({
            animation: {
                close: {
                    effects: "zoom:out",
                    duration: 300
                }
            }
        });
        $("#datetimepickerEnd").kendoDatePicker({
            animation: {
                close: {
                    effects: "zoom:out",
                    duration: 300
                }
            }
        });
    });

    $(document).ready(function () {

        function clearFiter() {
            $("form.k-filter-menu button[type='reset']").trigger("click");
        }

        $("#btnClearFilter").click(function (e) {
            e.preventDefault();
            var datasource = $("#TB_HotelAvailabilityHistory_Grid").data("kendoGrid").dataSource;
            datasource.filter([]);

            $("#datetimepickerStart").data("kendoDatePicker").value(null);
            $("#datetimepickerEnd").data("kendoDatePicker").value(null);
            $("#txtFilterID").val('');
           $("#txtFilterCode").val('');
        });

    });


</script>







