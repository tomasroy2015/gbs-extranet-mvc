@using Resources
@using MessageColumnCaptions


<h1 style="text-align:center;">@MessageColumnCaptions.DynamicPageName("TB_HotelPromotionRoom")</h1>


<div class="jumbotron" style="text-align: left; margin-bottom: 50px;border-radius:8px;padding: 10px;font-size: 15px;font-weight: 100;line-height: 1.142857;">
    <div class="row">

        <div class="col-md-12">
            <div class="col-md-4  col-sm-4">
                <div class="col-md-5  col-sm-5">
                    <label> @MessageColumnCaptions.TB_HotelPromotionRoom("HotelPromotionID")</label>
                </div>
                <div class="col-md-7  col-sm-7">
                    <input type="text" id="txtHotelPromotionid" class="form-control" style="width: 100%; height:25px;" />
                </div>

            </div>
            <div class="col-md-4  col-sm-4">

                <div class="col-md-4  col-sm-4">
                    <label>@MessageColumnCaptions.TB_HotelPromotionRoom("HotelRoomID") </label>
                </div>
                <div class="col-md-8  col-sm-8">
                    <input type="text" id="txtroomid" class="form-control" style="width: 100%; height:25px;" />
                </div>

            </div>
            <div class="col-md-2  col-sm-2">

                <div class="col-md-5  col-sm-5">
                    <label>@MessageColumnCaptions.TB_HotelPromotionRoom("Active") </label>
                </div>
                <div class="col-md-2  col-sm-2">
                    <input type="checkbox" id="chkactive"  />
                </div>

            </div>


            <div class="col-md-2  col-sm-2" style="padding: 10px;">
                <button id="btnfilter" class="btn btn-info" onclick="Filter()">@Resources.Filter</button>
                <button class="btn btn-info" id="btnClearFilter" onclick="clearFiter()">@Resources.RemoveFilter</button>
            </div>
        </div>
    </div>
</div>

<script>

    $("#btnfilter").click(function () {

        $filter = new Array();
        $hotelPromotionRoomid = $("#txtHotelPromotionid").val();
        $RoomID = $("#txtroomid").val();

        $Active = "false";
        if ($('#ChkFilterCommon').prop('checked')) {
            $Active = "true";
        }
        if ($hotelPromotionRoomid) {
            $filter.push({ field: "HotelPromotionID", operator: "equals", value: $hotelPromotionRoomid });
        }
        if ($RoomID) {
            $filter.push({ field: "HotelRoomID", operator: "equals", value: $RoomID });
        }
        if ($Active == "true") {
         
            $filter.push({ field: "Acitve", operator: "eq", value: $Active });
        }
        var grid = $("#TB_HotelPromotionRoom_Grid").data("kendoGrid");
        grid.dataSource.filter($filter);
    });



   



    function clearFiter() {
        $("form.k-filter-menu button[type='reset']").trigger("click");
    }

    $("#btnClearFilter").click(function (e) {
        e.preventDefault();
        var datasource = $("#TB_HotelPromotionRoom_Grid").data("kendoGrid").dataSource;
        
        datasource.filter([]);
      
        $("#txtHotelPromotionid").val('')
        $("#txtroomid").val('');

    });
    function RefreshGrid(e) {
        this.read();
    }
</script>

@(Html.Kendo().Grid<gbsExtranetMVC.Models.Repositories.TB_HotelPromotionRoomExt>()
                        .Name("TB_HotelPromotionRoom_Grid")
        .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(25)
            .Events(events => events.Error("onError").Sync("RefreshGrid"))
        .ServerOperation(true)
        .Model(model =>
        {
            model.Id(p => p.ID);
            model.Field(p => p.ID).Editable(false);
        })
                    .Create(update => update.Action("_Create", "TB_HotelPromotionRoom"))
                                .Read(read => read.Action("_Read", "TB_HotelPromotionRoom", new { TableID = (int)ViewBag.TableID }))
                                .Update(update => update.Action("_Update", "TB_HotelPromotionRoom"))
                                .Destroy(destroy => destroy.Action("_Destroy", "TB_HotelPromotionRoom"))

        )

                .Columns(columns =>
                {
                    columns.Command(

                       command =>
                       {
                           command.Edit().UpdateText(Resources.Update).CancelText(Resources.Cancel).Text(Resources.Edit);
                           command.Destroy().Text(Resources.Delete);
                       }).Locked(true).Width(180);

                    columns.Bound(p => p.ID).Width(150);
                    columns.Bound(p => p.HotelPromotionID).Title(MessageColumnCaptions.TB_HotelPromotionRoom("HotelPromotionID")).EditorTemplateName("ddlHotelPromotionID").Width(350);
                    columns.Bound(p => p.HotelRoomID).Width(250).Title(MessageColumnCaptions.TB_HotelPromotionRoom("HotelRoomID")).EditorTemplateName("ddlHotelRoomID").Width(350);
                    columns.Bound(p => p.Active).Width(250).ClientTemplate("<div style='text-align:center;'> #if(Active){# <img src='/Images/checked.gif' alt='checked'> #} else {# <img src='/Images/red_cross.png' alt='redCross'> #}# </div>").Title(MessageColumnCaptions.TB_HotelPromotionRoom("Active")); ;
                })
                .ToolBar(tool =>
                {
                    tool.Custom().Name("cmdAddNewRecord")
                   .Text(Resources.NewRecord)
                   .HtmlAttributes(new { @id = "cmdAddNewRecord" });
                    tool.Excel().Text(Resources.ExporttoExcel);
                })
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                    .Scrollable(scrollable => scrollable.Height(430))
        //.Scrollable().HtmlAttributes(new { @style = "width:1200px;" })

                .Pageable(p => p.Refresh(true))
                .Sortable()
                .Navigatable()
                .Groupable()
                .Scrollable(scr => scr.Height(370))
                .Filterable()
                .Excel(excel => excel
                                .FileName("TB_HotelPromotionRoom.xlsx")
                .Filterable(true))

)



<script id="AddNewRecord">

    $("#cmdAddNewRecord").click(function (e) {

        var table = $("#TB_HotelPromotionRoom_Grid").data("kendoGrid");
        var sorting = table.dataSource.sort();

        if (sorting) {
            table.dataSource.sort(null);
        }
        table.addRow();
        e.preventDefault();
        //put custom logic here
    });
</script>
