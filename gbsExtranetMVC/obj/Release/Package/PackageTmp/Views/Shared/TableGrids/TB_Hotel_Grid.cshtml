            columns.Bound(p => p.Sort).Title(MessageColumnCaptions.TB_HotelCaption("Sort")).Width(100);
            columns.Bound(p => p.Status).Title(MessageColumnCaptions.TB_HotelCaption("StatusID")).Width(150);
            columns.Bound(p => p.Preferred).Title(MessageColumnCaptions.TB_HotelCaption("IsPreferred")).Width(100);
