        }) 
        .ToolBar(tool =>
                            {
                                tool.Excel().Text(Resources.ExporttoExcel);
                            })
       
                .Editable(editable => editable.Mode(GridEditMode.InLine))
                .Scrollable(scrollable => scrollable.Height(430))
                .Pageable(p => p.Refresh(true))
                .Sortable()
                .Navigatable()
                .Groupable()
                .Scrollable(scr => scr.Height(370))
                .Filterable()
                .Excel(excel => excel
                            .FileName("TB_Hotel_Grid.xlsx")
                        .Filterable(true))

)

<script>
    $("#btnfilter").click(function () {
       
        $filter = new Array();
       
        $PartText = $("#txtFilterCode").data("kendoDropDownList").text();
        $PartValue = $("#txtFilterCode").val();
       
        $Code = $("#txtFilterID").val();

        $Active = "false";
        if ($('#chkStatus').prop('checked')) {
            $Active = "true";
        }
      

        if ($PartValue) {
            $filter.push({ field: "ChannelManager", operator: "contains", value: $PartText });
        }
        if ($Code) {
            $filter.push({ field: "Name", operator: "equal", value: $Code });
        }
        if ($Active == "true") {
            //alert($SentStatus)
            $filter.push({ field: "Active", operator: "eq", value: $Active });
        }

        var grid = $("#TB_Hotel_Grid").data("kendoGrid");
        grid.dataSource.filter($filter);
    });
    var AllSelectText = '@Resources.ListAllExpression'
    $(document).ready(function () {

        var json = {}
        $.ajax({
            type: "GET",
            url: "/DropDownLists/GetChannelManager",
            data: json,
            datatype: "json",
            success: function (data) {

                $("#txtFilterCode").kendoDropDownList({
                    filter: "contains",
                    Name: "ChannelManager",
                    optionLabel: AllSelectText,
                    dataTextField: "Name",
                    dataValueField: "ID ",
                    dataSource: data
                });

            }
        })

        function clearFiter() {
            $("form.k-filter-menu button[type='reset']").trigger("click");
        }

        $("#btnClearFilter").click(function (e) {
            e.preventDefault();
            var datasource = $("#TB_Hotel_Grid").data("kendoGrid").dataSource;
            datasource.filter([]);
            document.getElementById('chkStatus').checked = false
            $("#txtFilterID").val('');
            var dropdownlistPart = $("#txtFilterCode").data("kendoDropDownList");
            dropdownlistPart.select("");

        });

    });


</script>