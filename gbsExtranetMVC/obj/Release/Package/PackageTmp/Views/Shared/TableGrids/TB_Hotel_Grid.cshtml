            columns.Bound(p => p.HotelAccommodationType).Title(MessageColumnCaptions.TB_HotelCaption("HotelAccommodationTypeID")).Width(150);
            columns.Bound(p => p.Country).Title(MessageColumnCaptions.TB_HotelCaption("CountryID")).Width(100);
            columns.Bound(p => p.City).Title(MessageColumnCaptions.TB_HotelCaption("CityID")).Width(100);
            columns.Bound(p => p.MainRegion).Title(MessageColumnCaptions.TB_HotelCaption("MainRegionID")).Width(150);
            columns.Bound(p => p.Name).Title(MessageColumnCaptions.TB_HotelCaption("Name")).Width(100);
            columns.Bound(p => p.Description).Title(MessageColumnCaptions.TB_HotelCaption("Description_en")).Width(300);
            columns.Bound(p => p.Addres).Title(MessageColumnCaptions.TB_HotelCaption("Address")).Width(100);
            columns.Bound(p => p.Phone).Title(MessageColumnCaptions.TB_HotelCaption("Phone")).Width(150);
            columns.Bound(p => p.Fax).Title(MessageColumnCaptions.TB_HotelCaption("Fax")).Width(100);
            columns.Bound(p => p.PostCode).Title(MessageColumnCaptions.TB_HotelCaption("PostCode")).Width(150);
            columns.Bound(p => p.RoomCount).Title(MessageColumnCaptions.TB_HotelCaption("RoomCount")).Width(100);
            columns.Bound(p => p.WebAddress).Title(MessageColumnCaptions.TB_HotelCaption("WebAddress")).Width(150);
            columns.Bound(p => p.Email).Title(MessageColumnCaptions.TB_HotelCaption("Email")).Width(100);
            columns.Bound(p => p.CheckinStartTime).Title(MessageColumnCaptions.TB_HotelCaption("CheckinStart")).Width(150);
