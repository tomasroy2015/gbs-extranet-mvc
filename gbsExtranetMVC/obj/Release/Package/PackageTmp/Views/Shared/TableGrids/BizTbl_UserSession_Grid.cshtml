<script>
    $("#btnfilter").click(function () {
        $filter = new Array();

        $ID = $("#txtID").val();
        $User = $("#txtUser").val();
        $PartText = $("#drbCountry").data("kendoDropDownList").text();
        $PartValue = $("#drbCountry").val();
        $IpAddress = $("#txtIpAddress").val();
        $StartDate = $("#datetimepickerStart").data("kendoDatePicker").value();
        $EndDate = $("#datetimepickerEnd").data("kendoDatePicker").value();
       

        if ($ID) {
            $filter.push({ field: "ID", operator: "equals", value: String($ID) });
        }
        if ($User) {
            $filter.push({ field: "User", operator: "contains", value: String($User) });
        }

        if ($PartValue) {
            $filter.push({ field: "Country", operator: "contains", value: $PartText });
        }
        if ($IpAddress) {
            $filter.push({ field: "IpAddress", operator: "contains", value: String($IpAddress) });
        }
        if ($StartDate) {
            $filter.push({ field: "Date", operator: "IsGreaterThanOrEqualTo", value: $StartDate });
        }
        if ($EndDate) {
            $filter.push({ field: "Date", operator: "IsLessThanOrEqualTo", value: $EndDate });
        }
        var grid = $("#BizTbl_UserSessionExt_Grid").data("kendoGrid");
        grid.dataSource.filter($filter);
    });


    var AllSelectText = '@Resources.ListAllExpression'

    $(document).ready(function () {


        $("#datetimepickerStart").kendoDatePicker({
            animation: {
                close: {
                    effects: "zoom:out",
                    duration: 300
                }
            }
        });
        $("#datetimepickerEnd").kendoDatePicker({
            animation: {
                close: {
                    effects: "zoom:out",
                    duration: 300
                }
            }
        });


            var json = {}
            $.ajax({
                type: "GET",
                url: "/DropDownLists/GetCountries",
                data: json,
                datatype: "json",
                success: function (data) {

                    $("#drbCountry").kendoDropDownList({
                        filter: "contains",
                        Name: "CountryID",
                        optionLabel: AllSelectText,
                        dataTextField: "Country",
                        dataValueField: "CountryID ",
                        dataSource: data
                    });

                }
            })

        });


    function clearFiter() {
        $("form.k-filter-menu button[type='reset']").trigger("click");
    }

    $("#btnClearFilter").click(function (e) {
        e.preventDefault();
        var datasource = $("#BizTbl_UserSessionExt_Grid").data("kendoGrid").dataSource;
        //Clear Custom filters:
        datasource.filter([]);
        //Clear Fields
        $("#txtID").val('')
        $("#txtUser").val('');
        $("#txtIpAddress").val('');
       $("#datetimepickerStart").val('');
        $("#datetimepickerEnd").val('');
      

        //document.getElementById('ChkFilterCommon').checked = false
    });

</script>





